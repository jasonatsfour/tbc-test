<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="stock.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_stock_adv_location']/parent::div/parent::div" position="after">
                    <div class="col-xs-12 col-md-12 o_setting_box">
                         <div class="col-xs-12 col-md-6 o_setting_box left">
                            <div class="o_setting_left_pane" invisible="1">
                                <div>
                                    <b><label for="internal_transfer_kanban_id"/></b>
                                </div>
                                <field name="internal_transfer_kanban_id" options="{'no_open': True, 'no_create': True}" domain='[("code","=","internal")]'/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <b><label for="internal_transfer_kanban_id"/></b>
                                </div>
                                <field name="internal_transfer_kanban_id" options="{'no_open': True, 'no_create': True}" domain='[("code","=","internal")]'/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
